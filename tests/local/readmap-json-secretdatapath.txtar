### readmap-json-secretdatapath.txtar

cp chart1/data.json chart2

# @readmap(json) secret.*.data
exec cuegen chart1
stdout 'a: ZGF0YS1h'
stdout 'b: ZGF0YS1i'

# @readmap(json) mysecrets.*.*.data
exec cuegen chart2
stdout 'a: ZGF0YS1h'
stdout 'b: ZGF0YS1i'

-- chart1/cuegen.yaml --
objectsPath: objects
secretDataPath: secret.*.data

-- chart1/a.cue --
package kube

secret: foo: {
	data: {} @readmap(data.json)
}

objects: [ for v in secret {v} ]

-- chart2/cuegen.yaml --
objectsPath: objects
secretDataPath: mysecrets.*.*.data

-- chart2/a.cue --
package kube

mysecrets: foo: bar: {
	data: {} @readmap(data.json)
}

objects: [ for v in mysecrets.foo {v} ]

-- chart2/cuegen.yaml --
objectsPath: objects
secretDataPath: mysecrets.*.*.data

